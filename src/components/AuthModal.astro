<div id="auth-modal" class="fixed inset-0 z-[100] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/30 backdrop-blur-sm transition-opacity" id="auth-backdrop"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <!-- Modal Panel -->
            <div class="relative transform overflow-hidden bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md border border-gray-100 rounded-2xl">

                <!-- Close Button -->
                <button type="button" id="close-auth-modal" class="absolute top-4 right-4 text-gray-400 hover:text-gray-500">
                    <span class="sr-only">Cerrar</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start justify-center">
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">

                            <!-- Login View -->
                            <div id="login-view" class="block">
                                <h3 class="text-2xl font-serif font-semibold leading-6 text-brand-dark text-center mb-6" id="modal-title">Iniciar Sesión</h3>

                                <!-- Mensaje de Error -->
                                <div id="login-error" class="hidden mb-4 p-3 rounded-lg bg-red-50 text-red-600 text-sm items-start gap-2 border border-red-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 flex-shrink-0 mt-0.5">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                    </svg>
                                    <span id="login-error-text"></span>
                                </div>

                                <form class="space-y-4">
                                    <div>
                                        <label for="email" class="block text-xs font-medium text-gray-700 uppercase tracking-wider mb-1">Email</label>
                                        <input type="email" name="email" id="email" class="block w-full border-0 py-3 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-accent sm:text-sm sm:leading-6 bg-gray-50 rounded-lg" placeholder="tu@email.com">
                                    </div>
                                    <div>
                                        <div class="flex items-center justify-between mb-1">
                                            <label for="password" class="block text-xs font-medium text-gray-700 uppercase tracking-wider">Contraseña</label>
                                            <div class="text-xs">
                                                <a href="#" class="font-medium text-brand-accent hover:text-brand-dark">¿Olvidaste tu contraseña?</a>
                                            </div>
                                        </div>
                                        <input type="password" name="password" id="password" class="block w-full border-0 py-3 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-accent sm:text-sm sm:leading-6 bg-gray-50 rounded-lg">
                                    </div>
                                    <div class="pt-2">
                                        <button type="submit" class="flex w-full justify-center bg-brand-dark px-3 py-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-dark uppercase tracking-widest transition-colors rounded-lg">
                                            Ingresar
                                        </button>
                                    </div>

                                    <div class="relative mt-6">
                                        <div class="absolute inset-0 flex items-center" aria-hidden="true">
                                            <div class="w-full border-t border-gray-200"></div>
                                        </div>
                                        <div class="relative flex justify-center text-sm font-medium leading-6">
                                            <span class="bg-white px-6 text-gray-900">O continúa con</span>
                                        </div>
                                    </div>

                                    <div>
                                        <button type="button" id="google-login-btn" class="mt-6 flex w-full items-center justify-center gap-3 bg-white border border-gray-300 px-3 py-3 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-lg transition-all">
                                            <svg class="h-5 w-5" aria-hidden="true" viewBox="0 0 24 24">
                                                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"></path>
                                                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"></path>
                                                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"></path>
                                                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"></path>
                                            </svg>
                                            <span class="text-sm font-semibold leading-6">Google</span>
                                        </button>
                                    </div>
                                </form>
                                <p class="mt-8 text-center text-sm text-gray-500">
                                    ¿No tienes cuenta?
                                    <button type="button" id="go-to-register" class="font-semibold leading-6 text-brand-accent hover:text-brand-dark transition-colors">Regístrate ahora</button>
                                </p>
                            </div>

                            <!-- Register View -->
                            <div id="register-view" class="hidden">
                                <h3 class="text-2xl font-serif font-semibold leading-6 text-brand-dark text-center mb-6">Crear Cuenta</h3>

                                <!-- Mensaje de Error Registro -->
                                <div id="register-error" class="hidden mb-4 p-3 rounded-lg bg-red-50 text-red-600 text-sm items-start gap-2 border border-red-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 flex-shrink-0 mt-0.5">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                    </svg>
                                    <span id="register-error-text"></span>
                                </div>

                                <form class="space-y-4">
                                    <div>
                                        <label for="reg-name" class="block text-xs font-medium text-gray-700 uppercase tracking-wider mb-1">Nombre Completo</label>
                                        <input type="text" name="name" id="reg-name" class="block w-full border-0 py-3 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-accent sm:text-sm sm:leading-6 bg-gray-50 rounded-lg">
                                    </div>
                                    <div>
                                        <label for="reg-email" class="block text-xs font-medium text-gray-700 uppercase tracking-wider mb-1">Email</label>
                                        <input type="email" name="email" id="reg-email" class="block w-full border-0 py-3 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-accent sm:text-sm sm:leading-6 bg-gray-50 rounded-lg">
                                    </div>
                                    <div>
                                        <label for="reg-password" class="block text-xs font-medium text-gray-700 uppercase tracking-wider mb-1">Contraseña</label>
                                        <input type="password" name="password" id="reg-password" class="block w-full border-0 py-3 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-accent sm:text-sm sm:leading-6 bg-gray-50 rounded-lg">
                                    </div>
                                    <div>
                                        <label for="reg-password-confirm" class="block text-xs font-medium text-gray-700 uppercase tracking-wider mb-1">Confirmar Contraseña</label>
                                        <input type="password" name="password_confirm" id="reg-password-confirm" class="block w-full border-0 py-3 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-accent sm:text-sm sm:leading-6 bg-gray-50 rounded-lg">
                                        <p id="password-error" class="text-red-500 text-xs mt-1 hidden">Las contraseñas no coinciden</p>
                                    </div>
                                    <div class="pt-2">
                                        <button type="submit" class="flex w-full justify-center bg-brand-dark px-3 py-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-dark uppercase tracking-widest transition-colors rounded-lg">
                                            Registrarse
                                        </button>
                                    </div>
                                    <div class="hidden"></div>
                                </form>
                                <p class="mt-8 text-center text-sm text-gray-500">
                                    ¿Ya tienes cuenta?
                                    <button type="button" id="go-to-login" class="font-semibold leading-6 text-brand-accent hover:text-brand-dark transition-colors">Inicia sesión</button>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    import { auth, googleProvider, db } from '../firebase/client';
    import { signInWithPopup, createUserWithEmailAndPassword, signInWithEmailAndPassword, updateProfile } from "firebase/auth";
    import { doc, setDoc, getDoc, serverTimestamp } from "firebase/firestore";
    // Declaración de tipos para extender Window
    declare global {
        interface Window {
            openAuthModal: () => void;
        }
    }

    const modal = document.getElementById('auth-modal');
    const backdrop = document.getElementById('auth-backdrop');
    const closeBtn = document.getElementById('close-auth-modal');

    // View switching
    const loginView = document.getElementById('login-view');
    const registerView = document.getElementById('register-view');
    const goToRegisterBtn = document.getElementById('go-to-register');
    const goToLoginBtn = document.getElementById('go-to-login');

    if (goToRegisterBtn && loginView && registerView) {
        goToRegisterBtn.addEventListener('click', () => {
            loginView.classList.add('hidden');
            registerView.classList.remove('hidden');
        });
    }

    if (goToLoginBtn && loginView && registerView) {
        goToLoginBtn.addEventListener('click', () => {
            registerView.classList.add('hidden');
            loginView.classList.remove('hidden');
        });
    }

    // Validación de contraseñas y Registro
    const regPassword = document.getElementById('reg-password') as HTMLInputElement;
    const regPasswordConfirm = document.getElementById('reg-password-confirm') as HTMLInputElement;
    const passwordError = document.getElementById('password-error');
    const registerForm = registerView ? registerView.querySelector('form') : null;

    // Helper para mostrar errores de registro
    const showRegisterError = (message: string) => {
        const errorDiv = document.getElementById('register-error');
        const errorText = document.getElementById('register-error-text');
        if (errorDiv && errorText) {
            errorText.textContent = message;
            errorDiv.classList.remove('hidden');
            errorDiv.classList.add('flex');
        }
    };

    // Helper para limpiar errores de registro
    const clearRegisterError = () => {
        const errorDiv = document.getElementById('register-error');
        if (errorDiv && !errorDiv.classList.contains('hidden')) {
             errorDiv.classList.add('hidden');
             errorDiv.classList.remove('flex');
        }
    };

    if (registerForm && regPassword && regPasswordConfirm && passwordError) {

        const clearError = () => {
             clearRegisterError(); // Limpiar el mensaje general también
             if (!passwordError.classList.contains('hidden')) {
                passwordError.classList.add('hidden');
                regPassword.classList.remove('ring-2', 'ring-red-500');
                regPasswordConfirm.classList.remove('ring-2', 'ring-red-500');
             }
        };

        // Limpiar errores al escribir en otros campos
        const inputs = registerForm.querySelectorAll('input');
        inputs.forEach(input => {
            input.addEventListener('input', clearError);
        });

        registerForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            clearError();

            if (regPassword.value !== regPasswordConfirm.value) {
                passwordError.classList.remove('hidden');
                regPassword.classList.add('ring-2', 'ring-red-500');
                regPasswordConfirm.classList.add('ring-2', 'ring-red-500');
                return;
            }

            const nameInput = document.getElementById('reg-name') as HTMLInputElement;
            const emailInput = document.getElementById('reg-email') as HTMLInputElement;

            if(!nameInput || !emailInput) return;

             if (!nameInput.value || !emailInput.value || !regPassword.value) {
                showRegisterError("Por favor, completa todos los campos.");
                return;
            }

            try {
                // 1. Crear usuario en Firebase Auth
                const userCredential = await createUserWithEmailAndPassword(auth, emailInput.value, regPassword.value);
                const user = userCredential.user;

                // 2. Actualizar el perfil visual del usuario
                await updateProfile(user, {
                    displayName: nameInput.value
                });

                // Datos a guardar
                const userData = {
                    uid: user.uid,
                    name: nameInput.value, // Aseguramos que esto tenga valor
                    email: emailInput.value,
                    role: 'customer',
                    createdAt: serverTimestamp(),
                    provider: 'password'
                };

                console.log("Intentando guardar en Firestore:", userData);

                // 3. Guardar datos del usuario en Firestore
                await setDoc(doc(db, "users", user.uid), userData);

                console.log("Usuario registrado exitosamente y guardado:", user.uid);

                // Limpiar y cerrar
                registerForm.reset();
                closeModal();
            } catch (error: any) {
                console.error("Error al registrar:", error);

                // Manejo de errores común de Firebase
                let errorMessage = "Error al registrar el usuario.";
                if(error.code === 'auth/email-already-in-use') {
                    errorMessage = "El correo electrónico ya está en uso.";
                } else if (error.code === 'auth/weak-password') {
                    errorMessage = "La contraseña es muy débil (mínimo 6 caracteres).";
                } else if (error.code === 'auth/invalid-email') {
                    errorMessage = "El formato del email no es válido.";
                } else if (error.code === 'auth/operation-not-allowed') {
                    errorMessage = "El registro con email y contraseña no está habilitado en Firebase. Contacta al administrador.";
                } else {
                     errorMessage = "Error: " + error.message;
                }
                showRegisterError(errorMessage);
            }
        });

        regPassword.addEventListener('input', clearError);
        regPasswordConfirm.addEventListener('input', clearError);
    }

    // Helper para mostrar errores
    const showLoginError = (message: string) => {
        const errorDiv = document.getElementById('login-error');
        const errorText = document.getElementById('login-error-text');
        if (errorDiv && errorText) {
            errorText.textContent = message;
            errorDiv.classList.remove('hidden');
            errorDiv.classList.add('flex');
        }
    };

    // Helper para limpiar errores
    const clearLoginError = () => {
        const errorDiv = document.getElementById('login-error');
        if (errorDiv && !errorDiv.classList.contains('hidden')) {
             errorDiv.classList.add('hidden');
             errorDiv.classList.remove('flex');
        }
    };

    // Lógica Login con Google
    const googleLoginBtn = document.getElementById('google-login-btn');
    if (googleLoginBtn) {
        googleLoginBtn.addEventListener('click', async () => {
            clearLoginError();
            try {
                const result = await signInWithPopup(auth, googleProvider);
                const user = result.user;

                // Verificar si existe en Firestore, si no, crearlo (Primer login con Google)
                const userDocRef = doc(db, "users", user.uid);
                const userDoc = await getDoc(userDocRef);

                if (!userDoc.exists()) {
                    await setDoc(userDocRef, {
                        uid: user.uid,
                        name: user.displayName,
                        email: user.email,
                        role: 'customer',
                        createdAt: serverTimestamp(),
                        provider: 'google'
                    });
                }

                console.log("Usuario logueado con Google:", user);
                // Aquí podrías guardar el usuario en Firestore si es la primera vez
                closeModal();
            } catch (error: any) {
                console.error("Error al iniciar sesión con Google:", error);
                if (error.code === 'auth/popup-closed-by-user') {
                    // No mostrar error si el usuario cerró la ventana
                    return;
                }
                showLoginError("No se pudo iniciar sesión con Google. Inténtalo de nuevo.");
            }
        });
    }

    // Lógica Login con Email y Contraseña (para completar el modal)
    const loginForm = loginView ? loginView.querySelector('form') : null;
    if (loginForm) {

        // Limpiar errores al escribir
        const inputs = loginForm.querySelectorAll('input');
        inputs.forEach(input => {
            input.addEventListener('input', clearLoginError);
        });

        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            clearLoginError();

            const emailInput = document.getElementById('email') as HTMLInputElement;
            const passwordInput = document.getElementById('password') as HTMLInputElement;

            if (!emailInput || !passwordInput) return;

            if (!emailInput.value || !passwordInput.value) {
                showLoginError("Por favor, ingresa tu email y contraseña.");
                return;
            }

            try {
                const userCredential = await signInWithEmailAndPassword(auth, emailInput.value, passwordInput.value);
                console.log("Usuario logueado:", userCredential.user);
                closeModal();
            } catch (error: any) {
                console.error("Error Login:", error);
                let errorMessage = "Ocurrió un error al iniciar sesión.";

                if (error.code === 'auth/invalid-credential' || error.code === 'auth/user-not-found' || error.code === 'auth/wrong-password') {
                    errorMessage = "Email o contraseña incorrectos.";
                } else if (error.code === 'auth/invalid-email') {
                    errorMessage = "El formato del email no es válido.";
                } else if (error.code === 'auth/too-many-requests') {
                    errorMessage = "Demasiados intentos fallidos. Por favor intenta más tarde.";
                }

                showLoginError(errorMessage);
            }
        });
    }

    // Modal closing logic
    function closeModal() {
        if(modal) modal.classList.add('hidden');
        document.body.style.overflow = ''; // Restaurar scroll
        document.body.style.paddingRight = ''; // Restaurar padding
    }

    if (backdrop) backdrop.addEventListener('click', closeModal);
    if (closeBtn) closeBtn.addEventListener('click', closeModal);

    // Escape key to close
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
            closeModal();
        }
    });

    // Expose open function globally so Navbar can call it
    window.openAuthModal = function() {
        if(modal) {
            modal.classList.remove('hidden');

            // Bloquear scroll de fondo y evitar salto de contenido (layout shift)
            const scrollbarWidth = window.innerWidth - document.documentElement.clientWidth;
            if (scrollbarWidth > 0) {
                document.body.style.paddingRight = `${scrollbarWidth}px`;
            }
            document.body.style.overflow = 'hidden';

            // Reset to login view when opening
            if(loginView && registerView) {
                loginView.classList.remove('hidden');
                registerView.classList.add('hidden');
            }
        }
    }
</script>
