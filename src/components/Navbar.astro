<nav class="fixed w-full z-50 transition-all duration-300 bg-white/80 backdrop-blur-md border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
             <div class="flex-shrink-0 flex items-center">
                <a href="/" class="font-serif text-2xl font-bold tracking-tighter text-brand-dark">
                    WHY NOT? <span class="text-brand-accent text-lg italic font-light block -mt-2">perfums</span>
                </a>
            </div>

            <!-- Menú de escritorio central -->
            <div class="hidden md:flex items-center space-x-12">
                <a href="/mujer" class="text-xs tracking-[0.2em] font-medium text-brand-dark hover:text-brand-accent transition-colors uppercase">Mujer</a>
                <a href="/hombre" class="text-xs tracking-[0.2em] font-medium text-brand-dark hover:text-brand-accent transition-colors uppercase">Hombre</a>
                <a href="/unisex" class="text-xs tracking-[0.2em] font-medium text-brand-dark hover:text-brand-accent transition-colors uppercase">Unisex</a>
                <a href="/colecciones" class="text-xs tracking-[0.2em] font-medium text-brand-dark hover:text-brand-accent transition-colors uppercase">Colecciones</a>
            </div>

            <!-- Iconos de la derecha -->
            <div class="flex items-center space-x-6">
                 <!-- Búsqueda -->
                <button aria-label="Buscar" class="text-brand-dark hover:text-brand-accent transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                    </svg>
                </button>

                 <!-- Usuario - Ahora abre el modal -->
                 <button onclick="window.openAuthModal && window.openAuthModal()" aria-label="Cuenta" class="hidden sm:block text-brand-dark hover:text-brand-accent transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                </button>

                <!-- Carrito de compras -->
                <button class="relative group" aria-label="Carrito de compras">
                    <span class="absolute -right-2 -top-2 bg-brand-accent text-white text-[10px] font-bold w-4 h-4 rounded-full flex items-center justify-center">0</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-brand-dark group-hover:text-brand-accent transition-colors">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                    </svg>
                </button>

                <!-- Menú móvil (Hamburguesa) -->
                <button class="md:hidden text-brand-dark hover:text-brand-accent transition-colors" aria-label="Menú">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</nav>

<div class="h-20"></div> <!-- Espaciador para no solapar el contenido -->
