---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Perfumes para Hombre | Why Not Perfums">
    <!-- Header de la sección -->
    <div class="relative bg-brand-light py-20 md:py-32 overflow-hidden">
        <div class="absolute inset-0 opacity-[0.03] bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
        <div class="max-w-7xl mx-auto px-6 relative z-10 text-center">
            <h1 class="font-serif text-5xl md:text-7xl text-brand-dark mb-6">
                Colección Hombre
            </h1>
            <p class="font-sans text-brand-muted tracking-[0.2em] uppercase text-xs md:text-sm max-w-2xl mx-auto leading-relaxed">
                Fuerza, carácter y distinción. Descubre nuestra selección exclusiva de fragancias masculinas diseñadas para dejar una huella imborrable.
            </p>
        </div>
    </div>

    <!-- Filtros y Orden -->
    <div class="border-b border-gray-100 sticky top-20 z-40 bg-white/95 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto px-6 py-4 flex flex-col md:flex-row justify-between items-center gap-4">
            <span id="products-count" class="text-sm text-gray-500 font-sans">Cargando...</span>

            <div class="flex gap-6 text-sm font-sans">
                 <button class="flex items-center gap-2 text-brand-dark hover:text-brand-accent transition-colors">
                    Filtros
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
                    </svg>
                </button>
                <button class="flex items-center gap-2 text-brand-dark hover:text-brand-accent transition-colors">
                    Ordenar
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Grid de Productos -->
    <main class="max-w-7xl mx-auto px-6 py-12 md:py-20">
        <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12 min-h-[400px]">
            <div class="col-span-full flex justify-center py-12">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-brand-dark"></div>
            </div>
        </div>
    </main>
</Layout>

<script>
  import { db, storage } from "../firebase/client";
  import { collection, query, where, onSnapshot } from "firebase/firestore";
  import { ref, getDownloadURL } from "firebase/storage";
  import { addToCart } from "../store/cartStore";

  const container = document.getElementById('products-grid');
  const countSpan = document.getElementById('products-count');

  // Mapa para guardar los productos en memoria y recuperarlos al hacer click
  let productsMap = new Map();

  const q = query(collection(db, "products"), where("categoria", "==", "hombre"));

  // Delegación de eventos para el botón 'Añadir'
  if (container) {
    container.addEventListener('click', (e: any) => {
        const btn = e.target.closest('.add-to-cart-btn');
        if (btn) {
            const id = btn.dataset.id;
            const product = productsMap.get(id);
            if (product) {
                // Mapear campos de Firestore a estructura del carrito
                addToCart({
                    id: product.id,
                    name: product.nombre || product.name,
                    price: product.precio,
                    image: product.image,
                    quantity: 1
                });

                // Feedback visual simple (el botón cambia texto temporalmente)
                const originalText = btn.innerText;
                btn.innerText = "¡Añadido!";
                btn.classList.add('bg-green-600', 'text-white');
                btn.classList.remove('bg-white', 'text-brand-dark');

                setTimeout(() => {
                    btn.innerText = originalText;
                    btn.classList.remove('bg-green-600', 'text-white');
                    btn.classList.add('bg-white', 'text-brand-dark');
                }, 1500);
            }
        }
    });
  }

  const formatter = new Intl.NumberFormat('es-CL', {
      style: 'currency',
      currency: 'CLP'
  });

  onSnapshot(q, async (snapshot) => {
    // Actualizar contador
    if (countSpan) countSpan.textContent = `${snapshot.size} Resultados`;

    if (snapshot.empty) {
        if (container) container.innerHTML = '<p class="text-center col-span-full text-brand-muted">No se encontraron productos en la categoría "hombre".</p>';
        return;
    }

    try {
        const productsPromises = snapshot.docs.map(async (docSnap) => {
            const data = docSnap.data();
            let imageUrl = data.imagen_url;

            // Resolver URL de Storage si es gs://
            if (imageUrl && imageUrl.startsWith('gs://')) {
                try {
                    const imgRef = ref(storage, imageUrl);
                    imageUrl = await getDownloadURL(imgRef);
                } catch (e) {
                    console.error(`Error loading image for ${docSnap.id}:`, e);
                    imageUrl = 'https://placehold.co/400x500?text=Error+Imagen';
                }
            }

            return {
                id: docSnap.id,
                ...data,
                image: imageUrl || 'https://placehold.co/400x500?text=Sin+Imagen'
            };
        });

        const products = await Promise.all(productsPromises);

        productsMap.clear();
        products.forEach((p: any) => productsMap.set(p.id, p));

        if (container) {
            container.innerHTML = products.map((product: any) => {
                const isNew = product.isNew;
                const stock = product.stock;
                const brand = product.brand || 'Why Not?';
                const name = product.nombre || product.name || 'Sin Nombre';
                const price = product.precio !== undefined ? product.precio : 0;
                const formattedPrice = formatter.format(price);

                let badgeHTML = '';
                if (isNew) {
                    badgeHTML = '<span class="absolute top-4 right-4 z-10 text-brand-dark text-[10px] uppercase font-bold tracking-widest">Nuevo</span>';
                }

                if (stock !== undefined) {
                    if (stock <= 0) {
                        badgeHTML += '<span class="absolute top-4 left-4 z-10 bg-gray-500 text-white text-[10px] uppercase font-bold tracking-widest px-3 py-1">Agotado</span>';
                    } else if (stock < 5) {
                        badgeHTML += '<span class="absolute top-4 left-4 z-10 bg-red-400 text-white text-[10px] uppercase font-bold tracking-widest px-3 py-1">¡Últimos!</span>';
                    }
                }

                return `
                <div class="group relative">
                    ${badgeHTML}
                    
                    <div class="relative overflow-hidden aspect-[4/5] bg-gray-100 mb-4 cursor-pointer">
                        <img
                            src="${product.image}"
                            alt="${name}"
                            class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-105"
                            loading="lazy"
                        />
                        <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center pb-6">
                            <button 
                                data-id="${product.id}"
                                class="add-to-cart-btn bg-white text-brand-dark px-6 py-3 text-xs font-bold tracking-widest uppercase hover:bg-brand-accent hover:text-white transition-colors shadow-lg translate-y-4 group-hover:translate-y-0 duration-300 cursor-pointer">
                                Añadir
                            </button>
                        </div>
                    </div>

                    <div class="text-center space-y-1">
                        <h3 class="text-xs text-brand-muted uppercase tracking-widest">${brand}</h3>
                        <h2 class="font-serif text-lg text-brand-dark group-hover:text-brand-accent transition-colors">
                            <a href="/producto/${product.id}">
                                <span aria-hidden="true" class="absolute inset-0"></span>
                                ${name}
                            </a>
                        </h2>
                        <p class="font-medium text-brand-dark mt-2 text-sm">${formattedPrice}</p>
                    </div>
                </div>
                `;
            }).join('');
        }
    } catch (renderError) {
        console.error("Error renderizando productos:", renderError);
        if (container) container.innerHTML = `<p class="text-center col-span-full text-red-500">Error mostrando productos. Revisa la consola.</p>`;
    }
  }, (error) => {
      console.error("Error escuchando productos:", error);
      if (container) {
          let msg = "Error cargando productos.";
          if (error.code === 'permission-denied') msg += " Permiso denegado. Revisa las reglas de Firestore.";
          container.innerHTML = `<div class="col-span-full text-center p-4 bg-red-50 text-red-600 rounded">
            <p class="font-bold">${msg}</p>
            <p class="text-sm mt-2 font-mono">${error.message}</p>
          </div>`;
      }
      if (countSpan) countSpan.textContent = "Error";
  });
</script>
