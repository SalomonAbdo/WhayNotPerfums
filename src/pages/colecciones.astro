---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';

// Datos de Colecciones destacadas (Categorías visuales)
const collections = [
  {
    title: "The Private Blend",
    description: "Una selección exclusiva de notas raras y preciosas.",
    image: "https://images.unsplash.com/photo-1547887538-e3a2f32cb1cc?w=800&auto=format&fit=crop&q=60",
    link: "#" // En una app real, llevaría a un filtro específico
  },
  {
    title: "Summer Essentials",
    description: "Frescura cítrica y marina para los días de sol.",
    image: "https://images.unsplash.com/photo-1594035910387-fea47794261f?w=800&auto=format&fit=crop&q=60", 
    link: "#"
  },
  {
    title: "Nuit Intense",
    description: "Aromas profundos y seductores para la noche.",
    image: "https://images.unsplash.com/photo-1515377905703-c4788e51af15?w=800&auto=format&fit=crop&q=60",
    link: "#"
  }
];

// Datos simulados de productos (Gift Sets o Ediciones Especiales)
const exclusiveProducts = [
  {
    id: 'c1',
    brand: 'Jo Malone',
    name: 'Cologne Collection Set',
    price: 95990,
    image: 'https://images.unsplash.com/photo-1583467875263-d502c896507e?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3', 
    isNew: true
  },
  {
    id: 'c2',
    brand: 'Dior',
    name: 'La Collection Privée Set',
    price: 180990,
    image: 'https://images.unsplash.com/photo-1592864619736-2395d8209861?w=800&auto=format&fit=crop&q=60',
    isNew: false
  },
  {
    id: 'c3',
    brand: 'Tom Ford',
    name: 'Oud Wood Set',
    price: 350990,
    image: 'https://images.unsplash.com/photo-1523293182086-7651a899d37f?w=800&auto=format&fit=crop&q=60',
    isNew: true
  },
];
---

<Layout title="Colecciones Exclusivas | Why Not Perfums">
    <!-- Header Hero Section -->
    <div class="relative bg-brand-dark text-white py-24 md:py-40 overflow-hidden">
        <!-- Imagen de fondo con overlay -->
        <div class="absolute inset-0 opacity-40 bg-[url('https://images.unsplash.com/photo-1615529328331-f8e874928eca?w=1600&auto=format&fit=crop&q=80')] bg-cover bg-center"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-brand-dark via-transparent to-brand-dark/50"></div>
        
        <div class="max-w-7xl mx-auto px-6 relative z-10 text-center">
             <span class="block text-brand-accent tracking-[0.3em] text-xs uppercase mb-4 font-bold">Ediciones Limitadas</span>
            <h1 class="font-serif text-5xl md:text-7xl mb-6">
                Colecciones
            </h1>
            <p class="font-sans text-gray-200 tracking-[0.1em] text-sm max-w-2xl mx-auto leading-relaxed">
                Descubre nuestra curaduría especial. Fragancias agrupadas por sensaciones, momentos y exclusividad para los gustos más refinados.
            </p>
        </div>
    </div>

    <!-- Featured Collections Grid -->
    <section class="max-w-7xl mx-auto px-6 -mt-16 relative z-20 mb-24">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {collections.map((collection) => (
                <a href={collection.link} class="group relative h-[400px] overflow-hidden block shadow-xl">
                    <img 
                        src={collection.image} 
                        alt={collection.title} 
                        class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-90 group-hover:opacity-100 transition-all duration-500"></div>
                    <div class="absolute inset-0 flex flex-col justify-end p-8 text-white">
                        <h3 class="font-serif text-2xl mb-2 translate-y-2 group-hover:translate-y-0 transition-transform duration-500">{collection.title}</h3>
                        <div class="w-12 h-px bg-brand-accent mb-3 group-hover:w-20 transition-all duration-500"></div>
                        <p class="text-xs tracking-widest text-gray-300 transform opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">{collection.description}</p>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <!-- Sets Section -->
    <section class="bg-brand-light pb-20 pt-10">
         <div class="max-w-7xl mx-auto px-6 mb-12 text-center">
            <h2 class="font-serif text-4xl text-brand-dark mb-4">Sets Exclusivos</h2>
            <div class="w-24 h-px bg-brand-accent mx-auto mb-6"></div>
            <p class="text-brand-muted text-sm tracking-wide">Sets de regalo y ediciones especiales para coleccionistas</p>
        </div>

        <div class="max-w-7xl mx-auto px-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
                {exclusiveProducts.map((product) => (
                    <ProductCard
                        id={product.id}
                        brand={product.brand}
                        name={product.name}
                        price={product.price}
                        image={product.image}
                        isNew={product.isNew}
                    />
                ))}
            </div>

            <div class="text-center mt-16">
                 <button class="border border-brand-dark text-brand-dark px-10 py-4 font-sans text-xs tracking-widest hover:bg-brand-dark hover:text-white transition-all duration-500 uppercase">
                    Ver todos los sets
                </button>
            </div>
        </div>
    </section>
</Layout>

