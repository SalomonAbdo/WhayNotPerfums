rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Permitir lectura p√∫blica de archivos (necesario para ver las fotos de los perfumes)
      allow read: if true;

      // Escritura solo autenticados (o admins)
      allow write: if request.auth != null;
    }
  }
}
